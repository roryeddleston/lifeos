// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/* -------------------- Habits -------------------- */

model Habit {
  id           String        @id @default(cuid())
  name         String
  createdAt    DateTime      @default(now())
  completions  HabitRecord[] @relation("HabitCompletions")
  userId       String

  @@index([userId, createdAt], name: "habit_user_created_idx")
}

model HabitRecord {
  id        String   @id @default(cuid())
  date      DateTime
  completed Boolean  @default(false)

  habit     Habit    @relation("HabitCompletions", fields: [habitId], references: [id], onDelete: Cascade)
  habitId   String

  @@unique([habitId, date], name: "habitId_date")
  @@index([habitId, completed, date], name: "habitrecord_habit_completed_date_idx")
  @@index([date], name: "habitrecord_date_idx")

  // Added: alternative order to speed queries that filter by completed + date range across many habits
  @@index([completed, date, habitId], name: "habitrecord_completed_date_habit_idx")
}

/* -------------------- Tasks -------------------- */

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

model Task {
  id          String      @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime?
  status      TaskStatus  @default(TODO)
  createdAt   DateTime    @default(now())
  position    Int         @default(0)
  userId      String
  completedAt DateTime?

  @@index([status, completedAt], name: "task_status_completedat_idx")
  @@index([status, dueDate, createdAt], name: "task_status_due_created_idx")
  @@index([userId, status, dueDate], name: "task_user_status_due_idx")
  @@index([userId, createdAt], name: "task_user_created_idx")
  @@index([userId, position], name: "task_user_position_idx")
  @@index([dueDate], name: "task_duedate_idx")

  // Added: matches common list view (filter by user+status, sort by dueDate then createdAt)
  @@index([userId, status, dueDate, createdAt], name: "task_user_status_due_created_comp_idx")
}

/* -------------------- Goals -------------------- */

model Goal {
  id           String   @id @default(cuid())
  title        String
  description  String?
  targetValue  Int
  currentValue Int      @default(0)
  unit         String
  deadline     DateTime?
  createdAt    DateTime @default(now())
  userId       String

  @@index([userId, deadline], name: "goal_user_deadline_idx")
  @@index([userId, createdAt], name: "goal_user_created_idx")

  // Added: speeds “active vs completed” progress scans per user
  @@index([userId, currentValue, targetValue], name: "goal_user_progress_idx")
}