generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* -------------------- Habits -------------------- */

model Habit {
  id         String        @id @default(cuid())
  name       String
  createdAt  DateTime      @default(now())
  records    HabitRecord[]
  userId     String?       // will hold Auth0 `sub` later

  // Listing and scoping by user; sort newest-first
  @@index([userId, createdAt])
}

model HabitRecord {
  id        String   @id @default(cuid())
  date      DateTime
  completed Boolean  @default(false)

  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  habitId   String

  // One record per habit per day
  @@unique([habitId, date], name: "habitId_date")

  // Common filters: by habit, completed flag, then date window
  @@index([habitId, completed, date])
  // Fallback for cross-habit date windows (dashboards)
  @@index([date])
}

/* -------------------- Tasks -------------------- */

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

model Task {
  id          String      @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime?
  status      TaskStatus  @default(TODO)
  createdAt   DateTime    @default(now())

  // manual sort order (per user)
  position    Int         @default(0)

  // per-user data scoping (Auth0-ready: store `sub` here)
  userId      String?

  // true completion timestamp (null until DONE)
  completedAt DateTime?

  // Recently done lists
  @@index([status, completedAt])

  // Your views/filters: status + due windows (+ deterministic tie-breaker)
  @@index([status, dueDate, createdAt])

  // Per-user filters for list pages
  @@index([userId, status, dueDate])
  @@index([userId, createdAt])

  // Efficient reorder within a user's list
  @@index([userId, position])

  // Simple helpers (keep dueDate indexed for direct range scans)
  @@index([dueDate])
}

/* -------------------- Goals -------------------- */

model Goal {
  id           String   @id @default(cuid())
  title        String
  description  String?
  targetValue  Int
  currentValue Int      @default(0)
  unit         String
  deadline     DateTime?
  createdAt    DateTime @default(now())
  userId       String?  // Auth0 `sub` later

  // Per-user upcoming and recent lists
  @@index([userId, deadline])
  @@index([userId, createdAt])
}